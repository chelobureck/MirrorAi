# Simple .env for local development
# ===================================

# Basic Settings (все значения по умолчанию уже в settings.py)
PROJECT_NAME=SayDeck
VERSION=1.0.0

# Security - поменяйте SECRET_KEY для продакшена!
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - используем SQLite для простоты
USE_POSTGRES=false

# PostgreSQL (если включите USE_POSTGRES=true)
POSTGRES_USER=say_deck_user
POSTGRES_PASSWORD=your_database_password
POSTGRES_DB=say_deck
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432

# Redis (для rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379

# AI APIs - ОБЯЗАТЕЛЬНО настройте эти ключи!
OPENAI_API_KEY=sk-your-openai-api-key-here
GROQ_API_KEY=gsk_your-groq-api-key-here

# Image Search (опционально)
PEXELS_API_KEY=your-pexels-api-key-here

# OAuth (опционально)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google-callback

# Email (опционально)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Microservices (опционально)
IMAGE_MICROSERVICE_URL=http://image-service:8080
IMAGE_MICROSERVICE_TIMEOUT=30

# CORS Origins (по умолчанию уже настроены в settings.py)
# BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

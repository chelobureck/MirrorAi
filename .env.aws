# Production Environment Variables for AWS ECS
# ===========================================

# Project Settings
SECRET_KEY=${SECRET_KEY}
PROJECT_NAME=SayDeck
VERSION=1.0.0

# Database Settings (PostgreSQL for production)
USE_POSTGRES=true
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=${POSTGRES_DB}
POSTGRES_SERVER=${POSTGRES_SERVER}
POSTGRES_PORT=${POSTGRES_PORT}

# Redis Settings
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}

# AI Provider API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
GROQ_API_KEY=${GROQ_API_KEY}

# Image Search API Keys
PEXELS_API_KEY=${PEXELS_API_KEY}

# Ollama Settings (not used in production)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# OAuth Settings
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_REDIRECT_URI=${GOOGLE_REDIRECT_URI}

# Email Settings
GMAIL_USER=${GMAIL_USER}
GMAIL_APP_PASSWORD=${GMAIL_APP_PASSWORD}

# Image Microservice (if using)
IMAGE_MICROSERVICE_URL=${IMAGE_MICROSERVICE_URL}
IMAGE_MICROSERVICE_TIMEOUT=30
